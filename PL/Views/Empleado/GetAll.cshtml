@model BL.Empleado
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h2>Empleados </h2>
        </div>
    </div>

    <div style="margin-bottom: 18px;">


        @using (Html.BeginForm("GetAll", "Empleado", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">

                <div class="col-lg-4">
                    <input type="text"  id="NombreEmpleado" name="NombreEmpleado" placeholder="Ingrese Nombre" class="form-control form-select"/>
                </div>

                <div class="col-lg-2">
                    <input type="submit" value="Buscar" class="btn btn-info" />
                </div>


            </div>
        }
    </div>

        <div class="row">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id Empleado</th>
                        <th>Nombre</th>
                        <th>Id Departamento</th>
                        <th>Depatamento descripcion</th>
                        <th>Id Puesto</th>
                        <th>Puesto Descripcion</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (BL.Empleado empleado in Model.Empleados)
                    {
                        <tr>
                            <td>@empleado.EmpleadoID</td>
                            <td>@empleado.Nombre @empleado.ApellidoPaterno @empleado.ApellidoMaterno</td>
                            <td>@empleado.Departamento.DepartamentoId</td>
                            <td>@empleado.Departamento.Descripcion</td>
                            <td>@empleado.Puesto.PuestoId</td>
                            <td>@empleado.Puesto.Descripcion</td>
                            <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Empleado", new {EmpleadoID = empleado.EmpleadoID})" onclick=" return confirm('Estas seguro que quieres eliminar el resgitro=');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>



    </div>


